<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Reservas</title>
  </head>
  <body>
    <h1>Reservas</h1>

    <form action="/reservas_create_post" method="POST">
     <table>
      <!-- campos del formulario aquÃ­ --> 
      <tr>
      <td><label for="restaurante">Restaurante:</label>
      <select name="restaurante" id="restaurante">
        <% for (var i = 0; i < restaurantes.length; i++) { %>
          <option value="<%= restaurantes.id %>"><%= restaurantes[i].nombre %></option>
        <% } %>
      </select>
    </td>
    </tr>
    <tr>
    <td>
      <label for="mesas">Mesas:</label>
      <select name="mesas" id="mesas">
        <% for (var i = 0; i < mesas.length; i++) { %>
          <option value="<%= mesas.id %>"><%= mesas[i].nombre_mesa %></option>
        <% } %>
      </select>
    </td>
  </tr>
  <tr>
    <td>
      <label for="fecha">Fecha de reserva:</label>
      <input type="date" id="fecha" name="fecha">
    </td>
  </tr>
  <tr>
    <td>
      <label for="clietes">Clientes:</label>
      <select name="clientes" id="clientes">
        <% for (var i = 0; i < clientes.length; i++) { %>
          <option value="<%= clientes.id %>"><%= clientes[i].nombre %></option>
        <% } %>
      </select>
    </td>
  </tr>
  <tr>
    <td>
      <label for="hora">Hora:</label>
      <select name="hora" id="hora" multiple>
        <option value="1">12 a 13</option>
        <option value="2">13 a 14</option>
        <option value="3">14 a 15</option>
        <option value="4">19 a 20</option>
        <option value="5">20 a 21</option>
        <option value="6">21 a 22</option>
        <option value="7">22 a 23</option>
      </select>
    </td>
  </tr>
  <tr>
    <td>
      <label for="cantidad">Cantidad:</label>
      <input type="number" name="nombre" id="nombre">
    </td>
  </tr>
  </tr>
  </table> 
      <button type="submit">Enviar reserva</button>
    </form>

  <!-- <button onclick="href='reservas_create_post'">Crear Reserva</button> -->
  </body>
</html>
