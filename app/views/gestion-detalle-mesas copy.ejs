<body style="margin-left: 1vw; margin-top: 1vh;">
  <h1>Seleccione el cliente</h1>
 
  <br>


  <form id="form_post" action="/crear_detalle_consumo" method="POST">
    <div class="form-group w-50">
      <label for="productos">Productos:</label>
      <select class="form-control" name="productos" id="productos">
        <% for (var i=0; i < productos.length; i++) { %>
            
            <option value="<%= productos[i].id %>">
              <%= productos[i].nombre %> precio:  <%= productos[i].precio %>
            </option>
            
        <% } %>
      </select>
    </div>
    <br>

    <input type="number" id="cantidad" name="cantidad" value="1">
    <input type="hidden" id="cabecera" name="cabecera" value="<%= cabecera %>">
    <input type="submit" value="Agregar producto" class="btn btn-primary">
    <p style="margin-top: 3vh;"class="btn btn-secondary" onclick="window.history.back()">Atrás</p>

  </form>
  
<div id="resultado"></div>

<script>
    // Capturamos el evento de envío del formulario
    document.getElementById("form_post").addEventListener("submit", function(event) {
        event.preventDefault(); // Evitamos la recarga de la página

        // Realizamos la solicitud AJAX
        var formData = new FormData(this);
        var xhr = new XMLHttpRequest();
        xhr.open("POST", this.action);
        xhr.onreadystatechange = function() {
            if (xhr.readyState === XMLHttpRequest.DONE) {
                if (xhr.status === 200) {
                    // Actualizamos el contenido del div con la respuesta del servidor
                    document.getElementById("resultado").innerHTML = xhr.responseText;
                } else {
                    // Manejo de errores
                    console.error(xhr.status);
                }
            }
        };
        xhr.send(formData);
    });
</script>

</body>
